<%= erb :"common/header" %>

        <h1>Forgot Password</h1>

        <p><a href="/login" id="mod">Go Back To Login Page</a></p>

        <%if @password_confirmation%>
          <p>You will be emailed shortly with a replacement password!</p>
        <%else%>
          <p>Before we can assign you a new temporary password, please enter your username:</p>

          <form id ="form1" method="post" action="/forgot_password">
            <p>Username:</p>
            <input type="text" name="username" value="<%= h @username_field %>"/>
            <% if @username_error %>
              <br /><strong class="error"><%= @username_error %></strong>
            <% end %>

            <input type="submit" value="Submit" id="submit">
          </form>
        <%end%>


    <%= erb :"common/footer" %>