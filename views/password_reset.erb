<%= erb :"common/header" %>

  <h1>Password Reset Requests</h1>

  <p><a href="/admin" id="mod">Go Back To Admin Page</a></p>

  <%requestNum = 0%>
  <% @users.each do |user|%>
    <%if user.password_reset == "Y"%>
      <%requestNum += 1%>
    <%end%>
  <%end%>
  
  <%if requestNum > 0%>
    <table id="user_table">
      <tr id="columns">
        <th>Id</th>
        <th>Username</th>
        <th>email</th>
        <th>User_type</th>
        <th>Institution</th>
        <th>Assign New Password</th>
        </tr>

      <% @users.each do |user|%>
        <%if user.password_reset == "Y"%>
          <tr>
            <td class="row"><%=h user.id %></td>
            <td class="row"><%=h user.username %></td>
            <td class="row"><%=h user.email %></td>
            <td class="row"><%=h user.user_type %></td>
            <td class="row"><%=h user.institution %></td>

            <td class="butn_row">
            <form method="post" action="assign_temp_password">
              <input type="text" name="password" value="<%= h @password_field %>"/>
              <% if @password_error %>
                <br /><strong class="error"><%= @password_error %></strong>
              <% end %>
              <input type="hidden" name="id" value="<%= user.id %>" /> 
              <input type="submit" id="acc_change" value="Assign" />
            </form>
            </td>
          </tr>
        <%end%>
      <%end%>
    </table>
  <% else %>
    <p>There are no password reset requests!</p>
  <%end%>

<%= erb :"common/footer" %>